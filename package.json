{
  "name": "ecommerce-backend",
  "version": "1.0.0",
  "description": "apis for an ecommerce website",
  "main": "src/index.ts",
  "scripts": {
    "build": "npx tsc",
    "start": "cross-env NODE_ENV=production node -r tsconfig-paths/register dist/index.js",
    "dev": "cross-env NODE_ENV=development nodemon -w src --ext ts --exec \"ts-node -r tsconfig-paths/register ./src/index.ts\" --listen 0.0.0.0",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --write",
    "prepare": "husky",
    "migration:create": "npx typeorm-ts-node-commonjs migration:create",
    "migrate:up": "npx typeorm-ts-node-commonjs migration:run -d src/data-source.ts",
    "migrate:down": "npx typeorm-ts-node-commonjs migration:revert -d src/data-source.ts"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "repository": "https://github.com/rajasadeem/ecommerce-backend.git",
  "author": "rajasadeem <rajasadeem96@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "joi": "^17.13.3",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.0",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.2.2",
    "tsconfig-paths": "^4.2.0",
    "typeorm": "^0.3.20",
    "winston": "^3.13.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@types/cors": "^2.8.17",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^4.17.21",
    "@types/module-alias": "^2.0.4",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.8.0",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.8",
    "nodemon": "^3.1.4",
    "prettier": "3.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.0.1"
  },
  "_moduleAliases": {
    "@config": "dist/config",
    "@middlewares": "dist/middlewares",
    "@models": "dist/models",
    "@types": "dist/types",
    "@controllers": "dist/controllers",
    "@services": "dist/services",
    "@routes": "dist/routes",
    "@validations": "dist/validations"
  }
}
